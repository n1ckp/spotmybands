{
  "name": "spotmybands",
  "version": "0.1.0",
  "engines": {
    "node": "14.15.4"
  },
  "repository": "https://github.com/n1ckp/spotmybands",
  "description": "The place for quickly spotting events for the bands you listen to",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:client": "NODE_ENV=production webpack --config ./src/client/webpack.config.js",
    "start:client-dev": "webpack serve --config ./src/client/webpack.config.js --host 0.0.0.0",
    "build:server": "NODE_ENV=production tsc --p ./src/server",
    "start": "NODE_ENV=production node ./built/server/server.js",
    "start:server-dev": "ts-node --project ./src/server/tsconfig.server.json ./src/server/server",
    "copy:assets": "node ./scripts/copyAssets.js",
    "heroku-postbuild": "npm run build:server && npm run build:client && npm run copy:assets && npm run storybook:build",
    "storybook": "start-storybook",
    "storybook:build": "NODE_ENV=development build-storybook -o ./built/storybook",
    "heroku:setkeys": "node ./scripts/setHerokuKeys.js"
  },
  "keywords": [
    "Spotify",
    "Songkick",
    "Google",
    "Maps",
    "Bands",
    "Music",
    "Live",
    "Music",
    "Gigs"
  ],
  "author": "Nick Phillips",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@babel/preset-react": "^7.12.13",
    "@storybook/addon-a11y": "^6.1.21",
    "@storybook/addon-essentials": "^6.1.21",
    "@storybook/react": "^6.1.21",
    "@types/classnames": "^2.2.11",
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.1",
    "babel-loader": "^8.2.2",
    "core-js": "^3.8.3",
    "css-loader": "^5.1.1",
    "date-fns": "^1.30.1",
    "eslint": "^5.15.1",
    "eslint-plugin-react": "^7.12.4",
    "html-webpack-plugin": "^5.0.0-beta.6",
    "husky": "^5.2.0",
    "isomorphic-fetch": "^3.0.0",
    "lint-staged": "^10.5.4",
    "mini-css-extract-plugin": "^1.3.9",
    "node-sass": "^4.11.0",
    "pigeon-maps": "^0.17.1",
    "prettier": "^2.0.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-svg-loader": "^3.0.3",
    "sass-loader": "^10.1.1",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.1.1",
    "ts-loader": "^7.0.5",
    "url-loader": "^4.1.1",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.25",
    "express": "^4.17.1",
    "fs-extra": "^9.1.0",
    "hbs": "^4.1.1",
    "morgan": "^1.10.0",
    "node-fetch": "^3.1.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
